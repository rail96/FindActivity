@model FindActivity.ViewModels.CreateEventModel

<h2>Создать событие</h2>

<form asp-action="Create" asp-controller="Event" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <div>
        <div>
            <label asp-for="Name">Название</label><br />
            <input type="text" asp-for="Name" />
            <span asp-validation-for="Name" />
        </div>
        <div>
            <label asp-for="Type">Тип события</label><br />
            <input asp-for="Type" />
            <span asp-validation-for="Type" />
        </div>
        <div>
            <label asp-for="Description">Описание</label><br />
            <input asp-for="Description" />
            <span asp-validation-for="Description" />
        </div>
        <div>
            <label asp-for="Date">Дата</label><br />
            <input asp-for="Date" />
            <span asp-validation-for="Date" />
        </div>
        <div>
            <input type="submit" value="Создать" />
        </div>
    </div>
</form>